<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Vertical Line (Dividing page into left and right halves) -->
    <View
        android:id="@+id/vertical_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#BDBDBD" />

    <!-- Horizontal Line (Dividing page into top and bottom halves) -->
    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#BDBDBD" />

    <!-- Quadrant Labels -->

    <!-- Not Urgent but Important -->
    <TextView
        android:id="@+id/quadrant_label_urgent_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Not\nUrgent\nbut\nImportant"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/quadrant_label_background"
        android:padding="8dp" />

    <!-- Urgent and Important -->
    <TextView
        android:id="@+id/quadrant_label_urgent_not_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Urgent\nand\nImportant"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/quadrant_label_background"
        android:padding="8dp" />

    <!-- Not Urgent nor Important -->
    <TextView
        android:id="@+id/quadrant_label_not_urgent_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Not\nUrgent\nnor\nImportant"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/quadrant_label_background"
        android:padding="8dp" />

    <!-- Urgent but not Important -->
    <TextView
        android:id="@+id/quadrant_label_neither"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Urgent\nbut\nnot\nImportant"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/quadrant_label_background"
        android:padding="8dp" />

    <!-- Task Matrix Container -->
    <FrameLayout
        android:id="@+id/matrix_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal|bottom"
        android:elevation="4dp" />

</FrameLayout>
