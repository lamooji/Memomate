<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Vertical Line (Dividing page into left and right halves) -->
    <View
        android:id="@+id/vertical_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000" />

    <!-- Horizontal Line (Dividing page into top and bottom halves) -->
    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#000000" />

    <!-- Quadrant Labels -->
    <!-- Urgent and Important -->
    <TextView
        android:id="@+id/quadrant_label_urgent_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Urgent\nand\nImportant"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Urgent but Not Important -->
    <TextView
        android:id="@+id/quadrant_label_urgent_not_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="Urgent\nbut\nNot\nImportant"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Not Urgent but Important -->
    <TextView
        android:id="@+id/quadrant_label_not_urgent_important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Not\nUrgent\nbut\nImportant"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Neither Urgent nor Important -->
    <TextView
        android:id="@+id/quadrant_label_neither"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Neither\nUrgent\nnor\nImportant"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Task Matrix Container -->
    <FrameLayout
        android:id="@+id/matrix_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
