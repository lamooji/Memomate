<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDEDED">

    <!-- Title Section -->
    <TextView
        android:id="@+id/task_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task List Overlook"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Date Text -->
    <!-- Change this TextView -->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today is Oct 13"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_below="@id/task_list_title"
        android:layout_marginTop="4dp" />

    <!-- Matrix Container -->
    <RelativeLayout
        android:id="@+id/matrix_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_text"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp">

        <!-- Horizontal Lines for three sections -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android:text=&quot;&lt;3&quot;" />

        <View
            android:id="@+id/horizontal_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="160dp"
            android:background="#B0B0B0" />

        <View
            android:id="@+id/horizontal_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="320dp"
            android:background="#B0B0B0" />

        <!-- Vertical Line (divides time periods) -->
        <View
            android:id="@+id/vertical_line_1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp"
            android:background="#B0B0B0" />

        <View
            android:id="@+id/vertical_line_2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="240dp"
            android:background="#B0B0B0" />

        <!-- Time Labels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7+"
            android:textSize="12sp"
            android:layout_marginStart="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-7"
            android:textSize="12sp"
            android:layout_marginStart="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;3"
            android:textSize="12sp"
            android:layout_marginStart="300dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"/>

        <!-- Significance Levels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="240dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="400dp"/>

        <!-- Axes Labels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Significance"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgency"
            android:textSize="12sp"
            android:textColor="#999999"
            android:rotation="-90"
            android:layout_marginStart="-30dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>